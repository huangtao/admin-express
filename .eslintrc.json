{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readable",
        "SharedArrayBuffer": "readable"
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "no-compare-neg-zero":"error",
        "no-cond-assign":"error",
        "no-console":"off",
        "no-constant-condition":"error",
        "no-dupe-args":"error",
        "no-dupe-keys":"error",
        "no-duplicate-case":"error",
        "no-extra-boolean-cast":"warn",
        "no-extra-semi":"error",
        "no-obj-calls":"error",
        "no-redeclare":"warn",
        "no-self-assign":"error",
        "no-unreachable":"warn",
        "use-isnan":"error",
        "valid-typeof":"error",
        "no-shadow":"error",
        "no-undef":"error",
        "no-unused-vars":"off",
        "no-use-before-define":"error"
    }
}